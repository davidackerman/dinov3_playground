# Include the README
include README.md

# Include the license
include LICENSE

# Include requirements files
include requirements*.txt

# Include the pyproject.toml
include pyproject.toml

# Include all Python files in the package
recursive-include dinov3_playground *.py

# Exclude compiled Python files
global-exclude *.pyc
global-exclude __pycache__

# Exclude development and temporary files
global-exclude .git*
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo